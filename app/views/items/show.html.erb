<%= render "shared/header" %>

<% if @item.present? %>
  <div class="item-show">
    <div class="item-box">
      <h2 class="name">
        <%= @item.name.presence || "商品名なし" %>
      </h2>

      <div class="item-img-content">
        <% if @item.image.attached? %>
          <%= image_tag url_for(@item.image), class: "item-box-img" %>
        <% else %>
          <%= image_tag "item-sample.png", class: "item-box-img" %>
        <% end %>

        <% if @item.sold_out? %>
          <div class="sold-out">
            <span>Sold Out!!</span>
          </div>
        <% end %>
      </div>

      <div class="item-price-box">
        <span class="item-price">
          ¥ <%= number_with_delimiter(@item.price || 0) %>
        </span>
        <span class="item-postage">
          <%= @item.shipping_fee&.name.presence || "未設定" %>
        </span>
      </div>

      <% if user_signed_in? && !@item.sold_out? %>
        <% if current_user == @item.user %>
          <%= link_to "商品の編集", edit_item_path(@item), class: "item-red-btn" %>
          <p class="or-text">or</p>
          <%= button_to "削除", item_path(@item), method: :delete, data: { confirm: "本当に削除しますか？" }, class:"item-destroy" %>
        <% else %>
          <%= link_to "購入画面に進む", item_orders_path(@item), class:"item-red-btn" %>
        <% end %>
      <% end %>

      <div class="item-explain-box">
        <span><%= @item.description.presence || "説明なし" %></span>
      </div>

      <table class="detail-table">
        <tbody>
          <tr>
            <th class="detail-item">出品者</th>
            <td class="detail-value"><%= @item.user&.nickname.presence || "不明" %></td>
          </tr>
          <tr>
            <th class="detail-item">カテゴリー</th>
            <td class="detail-value"><%= @item.category&.name.presence || "未設定" %></td>
          </tr>
          <tr>
            <th class="detail-item">商品の状態</th>
            <td class="detail-value"><%= @item.condition&.name.presence || "未設定" %></td>
          </tr>
          <tr>
            <th class="detail-item">配送料の負担</th>
            <td class="detail-value"><%= @item.shipping_fee&.name.presence || "未設定" %></td>
          </tr>
          <tr>
            <th class="detail-item">発送元の地域</th>
            <td class="detail-value"><%= @item.prefecture&.name.presence || "未設定" %></td>
          </tr>
          <tr>
            <th class="detail-item">発送日の目安</th>
            <td class="detail-value"><%= @item.shipping_day&.name.presence || "未設定" %></td>
          </tr>
        </tbody>
      </table>

      <div class="option">
        <div class="favorite-btn">
          <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"20",height:"20"%>
          <span>お気に入り 0</span>
        </div>
        <div class="report-btn">
          <%= image_tag "flag.png" ,class:"report-flag-icon" ,width:"20",height:"20"%>
          <span>不適切な商品の通報</span>
        </div>
      </div>
    </div>

    <%# コメント欄 %>
    <div class="comment-box">
      <form>
        <textarea class="comment-text"></textarea>
        <p class="comment-warn">
          相手のことを考え丁寧なコメントを心がけましょう。
          <br>
          不快な言葉遣いなどは利用制限や退会処分となることがあります。
        </p>
        <button type="submit" class="comment-btn">
          <%= image_tag "comment.png" ,class:"comment-flag-icon" ,width:"20",height:"25"%>
          <span>コメントする</span>
        </button>
      </form>
    </div>

    <%# 前後リンク %>
    <div class="links">
      <a href="#" class="change-item-btn">
        ＜ 前の商品
      </a>
      <a href="#" class="change-item-btn">
        後ろの商品 ＞
      </a>
    </div>

    <%# 同じカテゴリーの商品リンク %>
    <% if @item.category.present? %>
      <a href="#" class="another-item"><%= @item.category.name %>をもっと見る</a>
    <% end %>

  </div>
<% else %>
  <p>商品が見つかりません。</p>
<% end %>

<%= render "shared/footer" %>


